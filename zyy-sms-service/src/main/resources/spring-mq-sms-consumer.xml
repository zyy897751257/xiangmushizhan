<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="smsMessageListener" class="com.zyy.sms.listener.SMSMessageListener"></bean>

    <bean id="mqPushConsumer" class="org.apache.rocketmq.client.consumer.DefaultMQPushConsumer" init-method="start" destroy-method="shutdown">
        <property name="namesrvAddr" value="127.0.0.1:9876"></property>
        <property name="consumerGroup" value="consumer_sms_group"></property>
        <property name="subscription">
            <map>
                <entry key="SMS_TOPIC" value="*"></entry>
            </map>
        </property>
        <property name="messageListener" ref="smsMessageListener"></property>
    </bean>
</beans>